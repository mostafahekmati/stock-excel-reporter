{
    "info": {
        "_postman_id": "0fbe9d2b-3a7a-4a66-8d5e-3c4f8a7b9c11",
        "name": "Stock Excel Reporter API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "API collection for Stock Excel Reporter (Laravel + Docker). Includes companies, stock imports, and stock change endpoints."
    },
    "variable": [
        { "key": "baseUrl", "value": "http://localhost:8080" },
        { "key": "companyId", "value": "7" },
        { "key": "importId", "value": "18" },
        { "key": "from", "value": "2025-01-01" },
        { "key": "to", "value": "2025-04-30" }
    ],
    "item": [
        {
            "name": "Health",
            "item": [
                {
                    "name": "GET /api/v1/health",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/health",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "health"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Companies",
            "item": [
                {
                    "name": "GET /api/v1/companies (list)",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/companies",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "companies"]
                        }
                    }
                },
                {
                    "name": "POST /api/v1/companies (create)",
                    "request": {
                        "method": "POST",
                        "header": [
                            { "key": "Accept", "value": "application/json" },
                            { "key": "Content-Type", "value": "application/json" }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"TestCo\",\n  \"symbol\": \"TST\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/companies",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "companies"]
                        }
                    }
                },
                {
                    "name": "GET /api/v1/companies/:id (show)",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/companies/{{companyId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "companies", "{{companyId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Stock Imports",
            "item": [
                {
                    "name": "POST /api/v1/stock-imports (upload xlsx)",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                { "key": "company_id", "value": "{{companyId}}", "type": "text" },
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/stock-imports",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "stock-imports"]
                        }
                    },
                    "response": []
                },
                {
                    "name": "GET /api/v1/stock-imports/:id (status)",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/stock-imports/{{importId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "stock-imports", "{{importId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Stock Analytics",
            "item": [
                {
                    "name": "GET /api/v1/companies/:id/stock/change (date range)",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/companies/{{companyId}}/stock/change?from={{from}}&to={{to}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "companies", "{{companyId}}", "stock", "change"],
                            "query": [
                                { "key": "from", "value": "{{from}}" },
                                { "key": "to", "value": "{{to}}" }
                            ]
                        }
                    }
                },
                {
                    "name": "GET /api/v1/companies/:id/stock/period-changes",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Accept", "value": "application/json" }],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/companies/{{companyId}}/stock/period-changes",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "companies", "{{companyId}}", "stock", "period-changes"]
                        }
                    }
                }
            ]
        }
    ]
}
